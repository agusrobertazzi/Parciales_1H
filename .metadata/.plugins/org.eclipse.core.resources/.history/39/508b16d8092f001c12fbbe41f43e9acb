#include "arcade.h"
#include "salon.h"

static int getNewIdArcade(void)
{
	static int counter = 0;

	return(counter++);
}

int initArcade(Arcade* list, int len)
{
	int status = FALSE;
	int i;

	if(list != NULL && len > 0)
	{
		status = TRUE;
		for(i = 0; i < len; i++)
		{
			list[i].isEmpty = TRUE;
		}
	}

	return status;
}

int addArcade(Arcade* listArcade, int lenArcade, Salon* listSalon, int lenSalon)
{
	int status = FALSE;
	int i;
	int j;

	if(listArcade != NULL && lenArcade > 0 && listSalon != NULL && lenSalon > 0)
	{
		for(i = 0; i < lenArcade; i++)
		{
			if(listArcade[i].isEmpty == FALSE)
			{
				status = TRUE;
				listArcade[i].isEmpty = FALSE;
			}
		}
	}

	return status;
}
