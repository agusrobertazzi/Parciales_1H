#include "informes.h"

int informeCuatroArcades(Salon* listSalon, int lenSalon, Arcade* listArcade, int lenArcade)
{
	int status = FALSE;
	int i;
	int j;
	int cont = 0;

	if(listSalon != NULL && lenSalon > 0 && listArcade != NULL && lenArcade > 0)
	{
		status = TRUE;

		puts("--------------------------------------");
		for(i = 0; i < lenSalon; i++)
		{
			if(listSalon[i].isEmpty == FALSE)
			{
				cont = 0;

				for(j = 0; j < lenArcade; j++)
				{
					if(listArcade[j].isEmpty == FALSE && listArcade[j].idSalon == listSalon[i].id)
					{
						cont++;
					}
				}

				if(cont > 4)
				{
					switch(listSalon[i].type)
					{
					case 0:
						printf("Salón #%d || %s || Dirección: %s || SALÓN\n", listSalon[i].id, listSalon[i].name, listSalon[i].adress);
						break;
					case 1:
						printf("Salón #%d || %s || Dirección: %s || SHOPPING\n", listSalon[i].id, listSalon[i].name, listSalon[i].adress);
						break;
					}
				}

			}
		}
		puts("--------------------------------------");
	}

	return status;
}

